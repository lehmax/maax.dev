---
import "@fontsource-variable/inter"
import "@fontsource-variable/outfit"
import Menu from "../components/Menu.astro"

type Props = {
  pageTitle?: string
}

const { pageTitle } = Astro.props
const title = pageTitle
  ? `${pageTitle} | Maxime Leherquer`
  : "Maxime Leherquer - Frontend Developer"
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content="A Frontend Developer and digital creator. This is myr" />
  </head>
  <body class="bg-yellow-50 text-zinc-950">
    <div
      class="py-5 w-full grid grid-cols-[1fr,min(720px,100%),1fr] gap-y-8 xl:gap-x-9 xl:grid-cols-[1fr,minmax(auto,240px),min(720px,100%),minmax(auto,240px),1fr] [&>*]:col-start-2 xl:[&>*]:col-start-3"
    >
      <header class="pt-4 pb-8">
        <Menu />
      </header>
      {pageTitle && <h1 class="font-bold font-title text-5xl">{pageTitle}</h1>}
      <main class="px-4 xl:px-0 grid grid-y-8">
        <slot />
      </main>
    </div>
  </body>
</html>
