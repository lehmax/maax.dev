---
import Layout from "../layouts/Layout.astro"

const allPosts = await Astro.glob("../pages/posts/*.md")
---

<Layout pageTitle="Blog">
  <ul>
    {
      allPosts.map((post) => (
        <li>
          <a href={post.url}>{post.frontmatter.title}</a>
        </li>
      ))
    }
  </ul>
</Layout>
